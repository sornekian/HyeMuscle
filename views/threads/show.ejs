<%- include('../partials/header') %>

<section id="show-page">
  <div>Title: </div>
  <div><%= thread.title %></div>
  <div>Content: </div>
  <div><%= thread.content %></div>

<br><br><h5>Comments</h5>
<% if(user) { %>
  <form id="add-comment-form" action="/threads/<%= thread._id %>/comments" method="POST">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Comment">
  </form>
<% } %>


<% if (thread.comments.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% thread.comments.forEach(function(c) { %>

        <tr>
          <td class="comment-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/comments/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / thread.comments.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
  
<% } else { %>
  <h5>No Comments Yet</h5>
<% } %>
  

<%- include('../partials/footer') %>